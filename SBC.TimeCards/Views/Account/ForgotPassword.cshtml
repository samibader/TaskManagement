@model SBC.TimeCards.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="text-center">
    <h1 class="h4 text-gray-900 mb-2">Forgot Your Password?</h1>
    <p class="mb-4">We get it, stuff happens. Just enter your email address below and we'll send you a link to reset your password!</p>
</div>

@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "user", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-user", @placeholder = "Enter Your Email Address..." })
    </div>
    <input type="submit" class="btn btn-primary btn-user btn-block" value="Email Link" />
}
<hr>
<div class="text-center">
    <a class="small" href="@Url.Action("Login","Account")">Already have an account? Login!</a>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
