@model SBC.TimeCards.Service.Models.Tickets.TicketKanabanViewModel
@using SBC.TimeCards.Common;
@{
    Layout = null;
}

@if (Model.AllTickets.Any())
{
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="body">
                <ul class="list-group">
                    @foreach (var item in Model.AllTickets)
                    {
                        <li class="list-group-item" data-id="@item.Id">
                            <a href="#" style="color:black" onclick="editTicket(@item.Id)">
                                <div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <h6><i class="@(item.StateId==(int)TicketStates.Delayed?"fa fa-question-circle text-danger":item.StateId==(int)TicketStates.Done?"fa fa-check-circle text-succes":"fa fa-check-circle-o text-primary")"></i> @item.Title </h6>
                                        </div>
                                        <div class="col-md-3">
                                            <p style="margin: 0;font-size: 14px;">
                                                @if (item.Assignee != null)
                                                {
                                                    <span class="badge badge-success">@item.Assignee.Name</span>
                                                }
                                                <small class="text-muted"><i class="icon-clock"></i> @item.DueDateAsString</small>
                                            </p>

                                        </div>
                                        <div class="col-md-2 text-right">

                                            <p style="margin: 0;font-size: 14px;">@item.CommentsCount <i class="icon-bubble"></i></p>

                                        </div>
                                    </div>
                                </div>
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
}

