@model SBC.TimeCards.Service.Models.Templates.TemplateViewModel
@{
    Layout = "~/Views/Templates/_TemplateLayout.cshtml";
}

<h4 style="background-color: #e9ecef;padding: 0px 0px 0px 16px;">Device</h4>

<div class="row">
    <div class="col-3">
        @*<label class="control-label col-md-4 " for="AssigneeId">Server Name</label>*@
        @Html.LabelFor(x => x.Name, new { @class = "control-label col-md-4" })
        <div class="col-md-12">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fa fa-font"></i></span>
                </div>
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="col-3">
        @*<label class="control-label col-md-4 " for="AssigneeId">Server Name</label>*@
        @Html.LabelFor(x => x.Type, new { @class = "control-label col-md-4" })
        <div class="col-md-12">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="icon-puzzle"></i></span>
                </div>
                @Html.TextBoxFor(x => x.Type, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="col-3">
        @*<label class="control-label col-md-4 " for="AssigneeId">Server Name</label>*@
        @Html.LabelFor(x => x.Location, new { @class = "control-label col-md-4" })
        <div class="col-md-12">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="icon-pointer"></i></span>
                </div>
                @Html.TextBoxFor(x => x.Location, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="col-3">
        @*<label class="control-label col-md-4 " for="AssigneeId">Server Name</label>*@
        @Html.LabelFor(x => x.DeviceIp, new { @class = "control-label col-md-4" })
        <div class="col-md-12">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fa fa-sitemap"></i></span>
                </div>
                @Html.TextBoxFor(x => x.DeviceIp, new { @class = "form-control" })
            </div>
        </div>
    </div>
</div>
