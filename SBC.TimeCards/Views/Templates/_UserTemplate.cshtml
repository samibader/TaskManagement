            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="icon-calendar"></i></span>
                </div>
                @Html.TextBoxFor(x => x.ExpirationDate, new { @class = "form-control" })
            </div>
        </div>
    </div>
</div>
