                    </li>
                </ul>  <!-- Tab panes -->
                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane active" id="basic-tab">
                        <div class="row clearfix" id="kanban">
                            @{ Html.RenderAction("KanabanByProject", "Tickets", new { id = Model.Id }); }
                        </div>


