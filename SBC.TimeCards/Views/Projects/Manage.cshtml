@model SBC.TimeCards.Service.Models.Projects.ProjectViewModel
@{
    ViewBag.Title = Model.Name;
}
@section styles
{
    <link rel="stylesheet" href="~/Lucid/assets/vendor/summernote/dist/summernote.css" />
    <style>
        .modal-dialog {
            max-width: 1000px;
        }
